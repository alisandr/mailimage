<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/new_card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>


    <TextView
            android:text="@string/new_card_email_annotation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <EditText
            android:id="@+id/new_card_create_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <TextView
            android:text="@string/new_card_subject_annotation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <EditText
            android:id="@+id/new_card_create_subject_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <TextView
            android:text="@string/new_card_body_annotation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <EditText
            android:id="@+id/new_card_create_body_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Button
            android:id="@+id/new_card_create_share_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

</LinearLayout>

