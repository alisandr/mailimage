<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/dialog_background_color">

    <com.gistr.ui.view.customFontComponents.textViews.NormalTextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="22dp"
        android:textColor="@android:color/white" />

    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:background="@color/dialog_divide_line_color" />

    <com.gistr.ui.view.customFontComponents.textViews.NormalTextView
        android:id="@+id/text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:textColor="@color/dialog_annotation_new_color" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/dialog_divide_line_color"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/forgot_password_dialog_button_cell"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.gistr.ui.view.customFontComponents.buttons.NormalButton
            android:id="@+id/cancel"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="0.45"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:background="@drawable/holo_dialog_button" />

        <View
            android:layout_height="50dp"
            android:layout_width="1dip"
            android:background="@color/dialog_divide_line_color" />

        <com.gistr.ui.view.customFontComponents.buttons.NormalButton
            android:id="@+id/allow"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="0.45"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:text="@string/yes"
            android:background="@drawable/holo_dialog_button" />
    </LinearLayout>
</LinearLayout>